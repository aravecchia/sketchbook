void setup()
{
  for (int led = 2; led < 10; led++)
  {
    pinMode(led, OUTPUT);
  }
}

void loop()
{
  for (int y = 0; y < 16; y++)
  {
    for (int x = 0; x < 8; x++)
    {
      digitalWrite(x + 2, matriz[y][x]);
      delay(t);
    }
  }
}
